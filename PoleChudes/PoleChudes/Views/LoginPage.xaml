<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PoleChudes.Views.LoginPage"
             
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             Visual="Material"
             
             >
    <ContentPage.Content>
        <StackLayout  WidthRequest="300" VerticalOptions="Center" HorizontalOptions="Center">
            <Label TextColor="#000" FontSize="30" HorizontalTextAlignment="Center" Text="Поле говна"></Label>
            <Entry x:Name="login" Placeholder="Логин" ></Entry>
            <Entry x:Name="pass" IsPassword="True" Placeholder="Пароль" ></Entry>

            <Button Clicked="Button_Clicked" CornerRadius="20" Text="Войти"></Button>
            <Label TextColor="#000" FontSize="14" HorizontalTextAlignment="Center" Text="ИЛИ"></Label>
            <Button Clicked="Button_Clicked_1" CornerRadius="20" Text="Регистрация"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>